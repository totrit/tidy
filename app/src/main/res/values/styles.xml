<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="android:listDivider">@drawable/list_divider</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back_white_24dp</item>
        <item name="android:actionBarStyle">@style/AppTheme.ActionBarStyle</item>
    </style>
    <style name="AppTheme.ActionBarStyle" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:titleTextStyle">@style/AppTheme.ActionBarStyle.TitleTextStyle</item>
    </style>
    <style name="AppTheme.ActionBarStyle.TitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- elevations -->
    <item name="elev_action_bar" type="dimen">2dp</item>
    <item name="elev_normal" type="dimen">1dp</item>

    <!-- colors -->
    <item name="color_primary" type="color">#ff2196F3</item>
    <item name="color_primary_dark" type="color">#ff0D47A1</item>
    <item name="color_primary_light" type="color">#ffBBDEFB</item>
    <item name="color_accent" type="color">#ffFF9800</item>
    <item name="color_text" type="color">#ffffffff</item>
</resources>
