<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.totrit.tidy.ui.AddItemDialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:focusableInTouchMode="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:background="@drawable/layout_border"
            android:gravity="center">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="20sp"
                android:hint="@string/hint_object_desc"
                android:id="@+id/objectDesc"
                android:enabled="true"/>

            <ImageButton
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text="@string/button_add_image"
                android:id="@+id/objectImage"
                android:adjustViewBounds="true"
                android:background="@drawable/ic_image_placeholder"
                android:focusableInTouchMode="true"/>
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/ic_archive_black_48dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/layout_border"
            android:gravity="center">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="20sp"
                android:hint="@string/hint_target_desc"
                android:id="@+id/containerDesc"
                android:enabled="true"/>

            <ImageButton
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text="@string/button_add_image"
                android:id="@+id/containerImage"
                android:adjustViewBounds="true"
                android:background="@drawable/ic_image_placeholder"
                android:focusableInTouchMode="true"/>
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/done"
            android:id="@+id/button_confirm"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="10dp"
            android:background="@color/holo_darker_green"/>
        </LinearLayout>

</ScrollView>
