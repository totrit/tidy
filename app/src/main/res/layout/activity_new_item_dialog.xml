<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    tools:context="com.totrit.tidy.ui.AddItemDialog"
    android:gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <EditText
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:textSize="20sp"
            android:hint="@string/hint_input_description"
            android:id="@+id/objectDesc"
            android:enabled="true"/>

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="@string/button_add_image"
            android:id="@+id/objectImage"
            android:adjustViewBounds="true"
            android:layout_marginLeft="16dp"
            android:background="@drawable/ic_image_placeholder"
            android:focusableInTouchMode="true" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:text="@string/placed_into"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:textSize="20sp"
            android:hint="@string/hint_input_description"
            android:id="@+id/containerDesc"
            android:enabled="true"/>

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="@string/button_add_image"
            android:id="@+id/containerImage"
            android:layout_marginLeft="16dp"
            android:background="@drawable/ic_image_placeholder"
            android:focusableInTouchMode="true" />
    </LinearLayout>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/done"
        android:id="@+id/button_confirm"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"/>

</LinearLayout>
